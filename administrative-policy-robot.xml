<?xml version="1.0" encoding="UTF-8"?>
<administrative-policy
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="administrative-policy-robot.xsd">
	<authorisation-rules id="R1">
		<rule>
			<rule-name>Observe-User</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action-sequence>
								<action>Display-Greet-Message</action>
								<action>Ask-If-User-Seek-Help</action>
							</action-sequence>
						</case>
						<case>
							<situation>vaccant</situation>
							<action-sequence>
								<action>Greet-Using-Voice</action>
								<action>Ask-If-User-Seek-Help</action>
							</action-sequence>
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Assist-User</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action>Inform-User<through>Text-Message</through></action>	
						</case>
						<case>
							<situation>vaccant</situation>
							<action>Bring-Coffee</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Entertain-User</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action>Play-Comedy-Video<with>Subtitles</with></action>	
						</case>
						<case>
							<situation>vaccant</situation>
							<action>Play-Comedy-Video<without>Subtitles</without></action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Train-User</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action-sequence>
								<action>Invite-Second-Robot</action>	
								<action>Start-Presentation</action>
							</action-sequence>
						</case>
						<case>
							<situation>vaccant</situation>
							<action-sequence>
								<action>Greet-Using-Voice</action>	
								<action>Start-Presentation</action>
							</action-sequence>						
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
	</authorisation-rules>
	<obligation-rules id="R2">
		<rule>
			<rule-name>Maintain-Volume</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action>Increase-Volume</action>	
						</case>
						<case>
							<situation>vaccant</situation>
							<action>Average-Volume</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Be-Prompt-On-Actions</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>assisting-user</situation>
							<action>Assist-User-Within-Time-Frame</action>	
						</case>
						<case>
							<situation>observing-user</situation>
							<action>Observe-User-Within-Time-Frame</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Be-Patient</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>assisting-user</situation>
							<action>Keep-Assisting<until>User-Stops</until></action>	
						</case>
						<case>
							<situation>entertaining-user</situation>
							<action>Keep-Entertaining<until>User-Stops</until></action>	
						</case>
						<case>
							<situation>training-user</situation>
							<action>Keep-Training<until>User-Stops</until></action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Protect-Self</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action>Alter-Path</action>	
						</case>
						<case>
							<situation>obstacle</situation>
							<action>Alter-Path</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Be-Attentive</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>registered-user</situation>
							<action>Recognise-Face</action>	
						</case>
						<case>
							<situation>unregistered-user</situation>
							<action>Display-Message</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Alert-On-Fire-Alarm</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>crowded</situation>
							<action>Report-Owner</action>	
						</case>
						<case>
							<situation>vaccant</situation>
							<action>Report-Owner</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
	</obligation-rules>
	<prohibition-rule id="R3">
		<rule>
			<rule-name>Get-Too-Close-To-User</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>assisting-user</situation>
							<action>Go-Too-Close-To-User</action>	
						</case>
						<case>
							<situation>observing-user</situation>
							<action>Go-Too-Close-To-User</action>	
						</case>
						<case>
							<situation>training-user</situation>
							<action>Go-Too-Close-To-User</action>	
						</case>
						<case>
							<situation>guiding-user</situation>
							<action>Go-Too-Close-To-User</action>	
						</case>
						<case>
							<situation>entertaining-user</situation>
							<action>Go-Too-Close-To-User</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Enter-Private-Locations</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>guiding-user</situation>
							<action>Enter-Private-Locations-Without-Permisison</action>	
						</case>
						<case>
							<situation>assisting-user</situation>
							<action>Enter-Private-Locations-Without-Permisison</action>	
						</case>
						<case>
							<situation>observing-user</situation>
							<action>Enter-Private-Locations-Without-Permisison</action>	
						</case>
						<case>
							<situation>entertaining-user</situation>
							<action>Enter-Private-Locations-Without-Permisison</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>
		<rule>
			<rule-name>Talk-To-Strangers</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>guiding-user</situation>
							<action>Respond-To-Strangers</action>	
						</case>
						<case>
							<situation>assisting-user</situation>
							<action>Respond-To-Strangers</action>	
						</case>
						<case>
							<situation>observing-user</situation>
							<action>Respond-To-Strangers</action>	
						</case>
						<case>
							<situation>entertaining-user</situation>
							<action>Respond-To-Strangers</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>  
		<rule>
			<rule-name>Disturb-Unnecessarily</rule-name>
			<device-type>Actuators</device-type>
			<case>
				<device>Smart-Robot</device>
				<context>
					<situation-dependencies>
						<case>
							<situation>guiding-user</situation>
							<action>Talk-If-No-One-Is-Communicating</action>	
						</case>
						<case>
							<situation>assisting-user</situation>
							<action>Talk-If-No-One-Is-Communicating</action>	
						</case>
						<case>
							<situation>observing-user</situation>
							<action>Talk-If-No-One-Is-Communicating</action>	
						</case>
						<case>
							<situation>entertaining-user</situation>
							<action>Talk-If-No-One-Is-Communicating</action>	
						</case>
					</situation-dependencies>
				</context>
			</case>
		</rule>  
	</prohibition-rule>
</administrative-policy>